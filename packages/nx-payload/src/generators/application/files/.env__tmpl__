#
# https://nx.dev/recipes/environment-variables/define-environment-variables
#
# App level base environments, overrided by `.env.*` files.
# Could safely be used by both Nx and Docker Compose.
#

# Secret Payload key
PAYLOAD_SECRET_KEY=your-very-secret-key

# MongoDb credentials required for a local Docker instance
MONGO_DB=<%= name %>

# MongoDB connection string
MONGO_URL=mongodb://localhost/<%= name %>

# Postgres credentials required for a local Docker instance
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=<%= name %>

# Postgres connection string
POSTGRES_URL=postgresql://postgres:postgres@localhost:5432/<%= name %>

# Express port
PORT=3000

# Payload admin host
PAYLOAD_PUBLIC_SERVER_URL=http://localhost:3000
