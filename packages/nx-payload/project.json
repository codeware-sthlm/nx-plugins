{
  "name": "nx-payload",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/nx-payload/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "options": {
        "assets": [
          "packages/nx-payload/*.md",
          {
            "glob": "**/!(*.ts)",
            "input": "./packages/nx-payload/src",
            "output": "./src"
          },
          {
            "glob": "**/*.d.ts",
            "input": "./packages/nx-payload/src",
            "output": "./src"
          },
          {
            "glob": "executors.json",
            "input": "./packages/nx-payload",
            "output": "."
          },
          {
            "glob": "generators.json",
            "input": "./packages/nx-payload",
            "output": "."
          }
        ]
      }
    },
    "github-release": {
      "executor": "@jscutlery/semver:github"
    },
    "npm-publish": {
      "executor": "ngx-deploy-npm:deploy"
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs nx-payload {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "test": {
      "executor": "@nx/jest:jest"
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {},
      "configurations": {
        "prerelease": {
          "releaseAs": "prerelease",
          "preid": "beta"
        },
        "premajor": {
          "releaseAs": "premajor",
          "preid": "rc"
        },
        "minor": {
          "releaseAs": "minor"
        },
        "major": {
          "releaseAs": "major"
        }
      }
    },
    "version-publish": {
      "executor": "@jscutlery/semver:version",
      "options": {},
      "configurations": {
        "prerelease": {
          "releaseAs": "prerelease",
          "preid": "beta"
        },
        "premajor": {
          "releaseAs": "premajor",
          "preid": "rc"
        },
        "minor": {
          "releaseAs": "minor"
        },
        "major": {
          "releaseAs": "major"
        }
      }
    }
  }
}
