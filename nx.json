{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "nxCloudId": "60cbc62702254e4c6470c413",
  "parallel": 3,
  "defaultBase": "master",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/eslint.config.js",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/test-setup.[jt]s"
    ],
    "sharedGlobals": []
  },
  "targetDefaults": {
    "@nx/jest:jest": {
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/jest.preset.js",
        "{workspaceRoot}/**/*.spec.ts"
      ],
      "options": {
        "passWithNoTests": true,
        "jestConfig": "{projectRoot}/jest.config.ts"
      },
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      },
      "cache": true
    },
    "@nx/js:tsc": {
      "options": {
        "main": "{projectRoot}/src/index.ts",
        "outputPath": "dist/{projectRoot}",
        "tsConfig": "{projectRoot}/tsconfig.lib.json"
      },
      "outputs": ["{options.outputPath}"],
      "cache": true
    },
    "nx-release-publish": {
      "dependsOn": ["build"],
      "options": {
        "packageRoot": "{workspaceRoot}/dist/packages/{projectName}"
      }
    },
    "build": {
      "dependsOn": ["build-base", "build-native"],
      "inputs": ["production", "^production"],
      "cache": true
    }
  },
  "release": {
    "projects": ["packages/*", "!packages/core"],
    "projectsRelationship": "independent",
    "releaseTagPattern": "{projectName}-{version}",
    "changelog": {
      "automaticFromRef": true,
      "git": {
        "commitMessage": "chore(release): packages"
      },
      "projectChangelogs": {
        "createRelease": "github"
      },
      "workspaceChangelog": false
    },
    "version": {
      "conventionalCommits": true,
      "generatorOptions": { "fallbackCurrentVersionResolver": "disk" }
    },
    "conventionalCommits": {
      "types": {
        "feat": {
          "semverBump": "minor",
          "changelog": {
            "title": "‚ú® Features"
          }
        },
        "fix": {
          "semverBump": "patch",
          "changelog": {
            "title": "üêû Bug Fixes"
          }
        },
        "perf": {
          "semverBump": "patch",
          "changelog": {
            "title": "‚ö°Ô∏è Performance Improvements"
          }
        },
        "revert": {
          "semverBump": "patch",
          "changelog": {
            "title": "üîô Revert Code Changes"
          }
        },
        "docs": {
          "semverBump": "patch",
          "changelog": {
            "title": "üìÑ Documentation"
          }
        },
        "chore": {
          "semverBump": "patch",
          "changelog": {
            "title": "‚öôÔ∏è Miscellaneous Chores"
          }
        },
        "refactor": {
          "semverBump": "patch",
          "changelog": {
            "title": "üßπ Code Refactoring"
          }
        },
        "test": {
          "semverBump": "none",
          "changelog": {
            "title": "‚úÖ Tests"
          }
        },
        "ci": {
          "semverBump": "none",
          "changelog": {
            "title": "ü§ñ Continuous Integration"
          }
        },
        "build": {
          "semverBump": "patch",
          "changelog": {
            "title": "üõ†Ô∏è Build System"
          }
        }
      }
    }
  },
  "plugins": [
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    }
  ]
}
